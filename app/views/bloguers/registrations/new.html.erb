<!-- Top content -->
<div class="top-content">

  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1><strong>Bootstrap</strong> Registration Form</h1>
          <div class="description">
            <p>
              This is a free responsive registration form made with Bootstrap.
              Download it on <a href="http://azmind.com"><strong>AZMIND</strong></a>, customize and use it as you like!
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 book">
          <%= image_tag("ebook.png")%>
        </div>
        <div class="col-sm-5 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <h3>Get our eBook</h3>
              <p>Fill in the form below to get instant access:</p>
            </div>
            <div class="form-top-right">
              <i class="fa fa-pencil"></i>
            </div>
          </div>
          <div class="form-bottom">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "registration-form") do |f| %>
                <%= devise_error_messages! %>
              <div class="form-group">
                <label class="sr-only" for="form-first-name">Primer Nombre</label>
                <%= f.text_field :name, placeholder: "Primer Nombre", class:"form-first-name form-control", id:"form-first-name" %>
              </div>
              <div class="form-group">
                <label class="sr-only" for="form-last-name">Primer Apellido</label>
                <%= f.text_field :lastname, placeholder: "Primer Apellido", class:"form-last-name form-control", id:"form-last-name" %>
              </div>
              <div class="form-group">
                <label class="sr-only" for="form-email">Email</label>
                <%= f.email_field :email, placeholder:"Email...", class:"form-email form-control", id:"form-email"%>
              </div>
                <div class="form-group">
                  <label class="sr-only" for="form-email">Contrase単a</label>
                  <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> Caracteres minimo)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off", placeholder:"Contrase単a...", class:"form-password form-control", id:"form-password" %>
                </div>
                <div class="form-group">
                  <label class="sr-only" for="form-email">Repite la Contrase単a</label>
                  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Repita Contrase単a...", class:"form-password form-control", id:"form-password"  %>
                </div>
                <%= f.submit "Registrate", class: "btm" %>
            <%end%>
            <%= render "bloguers/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>