<%= render "layouts/nav_blog_perfil" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <div class="row">
        <div class="col-md-12">
          <nav>
            <ul>
              <li>
                <%= link_to content_tag(:i, " Dashboard", class: 'fa fa-eye'), posts_path %>
              </li>
              <li>
                <%= link_to content_tag(:i, " Perfil", class: 'fa fa-eye'), edit_bloguer_registration_path %>
              </li>
              <li>
                <%= link_to content_tag(:i, " New Post", class: 'fa fa-eye'), new_post_path %>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <%= form_for @post, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
          <div class="row">
            <h1>Titulo del Post</h1>
            <div class="col-md-12">
              <%= f.text_field :title, class: "post_title" %>
            </div>
          </div>

          <%= f.text_area :body, :class => "froala-editor" %>
          <%= f.submit "Publicar" %>
      <% end %>
    </div>
    <div class="col-md-2">
      <div class="row">
        <div class="col-md-12">
          <%= image_tag @post.picture.url(:thumb), id: "preview_post", style:"width: 100%; margin-bottom: 20px" %>
          <%= form_for @post, url: {action: "update"}, :html => { :multipart => true } do |f| %>
              <%= f.file_field :picture, id: "pImage", class:"filestyle", style: "width: 90%;"%>
              <%= f.submit "Publicar", class:"btn btn-primary " %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

