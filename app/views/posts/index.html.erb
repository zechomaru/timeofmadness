<%= render "layouts/nav_blog_perfil" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
        <div class="row">
          <div class="col-md-12">
            <nav>
              <ul>
                <li>
                  <%= link_to content_tag(:i, " Dashboard", class: 'fa fa-eye'), posts_path %>
                </li>
                <li>
                  <%= link_to content_tag(:i, " New Post", class: 'fa fa-eye'), new_post_path %>
                </li>
              </ul>
            </nav>
          </div>
        </div>
    </div>
    <div class="col-md-10">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Imagen</th>
          <th>Titulo</th>
          <th>Fecha creado</th>
          <th>Fecha atualizado</th>
          <th>Visto</th>
          <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @posts.each do |p| %>
            <tr>
              <td><%= image_tag p.picture.url(:thumb) %></td>
              <td style="vertical-align: middle"><%= p.title %></td>
              <td style="vertical-align: middle"><%= p.created_at.strftime('%d-%m-%Y') %></td>
              <td style="vertical-align: middle"><%= p.updated_at.strftime('%d-%m-%Y') %></td>
              <th style="vertical-align: middle"><%= p.impressionist_count %></th>
              <th style="vertical-align: middle">
                <%= link_to content_tag(:i, nil, class: 'fa fa-eye'), p %>
                <%= link_to content_tag(:i, nil, class: 'fa fa-pencil-square-o'), edit_post_path(p) %>
                <%= link_to content_tag(:i, nil, class: 'fa fa-times'), p, method: :delete, data: { confirm: "Desea eliminar?" } %>
              </th>
            </tr>
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>


