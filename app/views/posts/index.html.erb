<div class="container-fluid">

</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-10">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Titulo</th>
          <th>Fecha creado</th>
          <th>Fecha atualizado</th>
          <th>Visto</th>
          <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @posts.each do |p| %>
            <tr>
              <td><%= p.title %></td>
              <td><%= p.created_at.strftime('%d-%m-%Y') %></td>
              <td><%= p.updated_at.strftime('%d-%m-%Y') %></td>
              <th><%= p.view %></th>
              <th>
                <%= link_to content_tag(:i, nil, class: 'fa fa-eye'), p %>
                <%= link_to content_tag(:i, nil, class: 'fa fa-pencil-square-o'), edit_post_path(p) %>
                <%= link_to content_tag(:i, nil, class: 'fa fa-times'), p, method: :delete, data: { confirm: "Desea eliminar?" } %>
              </th>
            </tr>
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>


