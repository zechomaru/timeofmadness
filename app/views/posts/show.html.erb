<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <!-- publicidad -->
      <div class="row">
        <div class="col-md-12">
          <!-- publicidad -->
          <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <!-- post lateral izq -->
          <ins class="adsbygoogle"
               style="display:block"
