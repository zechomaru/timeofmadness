        </div>
      </div>
    </div>
    <div class="col-md-8">
      <!-- content -->
      <div class="row">
        <div class="col-md-12">
          <div class="froala-view">
            <h1><%= @post.title %></h1>
            <div class="fb-like" data-href="http://timeofmadnees.com/posts//<%= @post.id %>" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
            <% str=@post.body %>
            <%= CGI.unescapeHTML(str).html_safe %>
          </div>
        </div>
        <div class="col-md-12">
          <div class="fb-like" data-href="http://timeofmadnees.com/posts//<%= @post.id %>" data-layout="box_count" data-action="like" data-show-faces="true" data-share="true"></div>
        </div>
        <div class="col-md-12">
          <div class="fb-comments" data-href="https://www.facebook.com/timeofmadnessblog/post/<%= @post.id %>" data-numposts="5"></div>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <div class="row">
        <div class="col-md-12">
